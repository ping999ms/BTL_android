<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000335"
    android:orientation="vertical"
    android:padding="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        app:cardCornerRadius="22dp"
        app:cardElevation="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_btn_title_crud"
            android:fontFamily="@font/robotoslabvariablefont_wght"
            android:gravity="center"
            android:text="Sửa Sách"
            android:textColor="#FFE082"
            android:textSize="25sp" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/custom_title"
            android:fontFamily="@font/robotoslabvariablefont_wght"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="Tiêu Đề"
            android:textColor="#FFE082"
            android:textSize="15sp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/ed_tieude"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_ed_sach"
            android:fontFamily="@font/bevietnampro_medium"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/custom_title"
            android:fontFamily="@font/robotoslabvariablefont_wght"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="Tác Giả"
            android:textColor="#FFE082"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_tacgia"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_ed_sach"
            android:fontFamily="@font/bevietnampro_medium"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/custom_title"
            android:fontFamily="@font/robotoslabvariablefont_wght"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="Nhà Xuất Bản"
            android:textColor="#FFE082"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_NXB"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_ed_sach"
            android:fontFamily="@font/bevietnampro_medium"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/custom_title"
            android:fontFamily="@font/robotoslabvariablefont_wght"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="Giá Bìa"
            android:textColor="#FFE082"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_giaBia"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_ed_sach"
            android:fontFamily="@font/bevietnampro_medium"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/custom_title"
            android:fontFamily="@font/robotoslabvariablefont_wght"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="Số Lượng"
            android:textColor="#FFE082"
            android:textSize="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_soLuong"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_ed_sach"
            android:fontFamily="@font/bevietnampro_medium"
            android:gravity="center|left"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/custom_ed_spn"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/custom_title"
            android:fontFamily="@font/robotoslabvariablefont_wght"
            android:gravity="center|left"
            android:paddingLeft="15dp"
            android:text="Mã Thể Loại"
            android:textColor="#FFE082"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spn_theloai"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_ed_spn" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_save"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:background="@drawable/custom_btn_title_crud"
                android:fontFamily="@font/robotoslabvariablefont_wght"
                android:text="Lưu"
                android:textColor="#FFE082"
                android:textSize="15dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="10dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_exit"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/custom_btn_title_crud"
                android:fontFamily="@font/robotoslabvariablefont_wght"
                android:text="Hủy"
                android:textColor="#FFE082"
                android:textSize="15dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>