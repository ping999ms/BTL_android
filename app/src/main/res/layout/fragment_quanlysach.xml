<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FRAGMENT.fragmentsach.fragment_QLSach">

    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/toolbar_qlsach"
        android:background="#000335"
        app:tabTextColor="#61E6DFDC"
        app:tabSelectedTextColor="#00FF19"
        style="@style/Text_Tab"
        />
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_qlsach"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>