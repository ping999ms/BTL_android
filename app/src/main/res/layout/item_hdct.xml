<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="#03015A"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_idHdct"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="@font/kanit_regular"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Mã Hóa Đơn Chi Tiết: "
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_maHd"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="@font/kanit_regular"
            android:paddingLeft="10dp"
            android:text="Mã Hóa Đơn: "
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_idSach"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="@font/kanit_regular"
            android:paddingLeft="10dp"
            android:text="Mã Sách: "
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_soluong"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:fontFamily="@font/kanit_regular"
            android:paddingLeft="10dp"
            android:text="Số Lượng Mua: "
            android:textColor="#fff"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp">

                <TextView
                    android:id="@+id/img_delete"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="#ED0303"
                    android:fontFamily="@font/kanit_regular"
                    android:gravity="center"
                    android:text="DELETE"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="10dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/img_edit"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:background="#09FF00"
                    android:fontFamily="@font/kanit_regular"
                    android:gravity="center"
                    android:src="@android:drawable/ic_menu_edit"
                    android:text="UPDATE"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>